        <dependency>
            <groupId>com.github.ulisesbocchio</groupId>
            <artifactId>jasypt-spring-boot</artifactId>
            <version>3.0.5</version>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>container</id>
            <properties>
                <!-- Weâ€™ll use properties to override the paths cleanly -->
                <custom.build.dir>/opt/webapp/target/library</custom.build.dir>
            </properties>

            <build>
                <!-- This part is valid -->
                <directory>${custom.build.dir}</directory>

                <!-- Valid child: resources -->
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <targetPath>${custom.build.dir}/classes</targetPath>
                        <filtering>true</filtering>
                    </resource>
                </resources>

